<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Adm__categoria_da __Categoria" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/download" />

        <LinearLayout
            android:layout_width="158dp"
            android:layout_height="55dp"
            android:layout_weight="0.32"
            android:orientation="vertical" >

            <TextView
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="Alpha Books"
                android:textSize="18sp" />

            <TextView
                android:layout_width="224dp"
                android:layout_height="32dp"
                android:text="Manutenção de Categoria" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
            <TextView
                android:id="@+id/txtCodigo"
                android:visibility="invisible"
                android:layout_width="224dp"
                android:layout_height="32dp"
                android:text="Adm__categoria_da __Categoria" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/txtCategoria"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="105dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtCategoria"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="41dp"
        android:orientation="vertical" >
    </LinearLayout>

    <EditText
        android:id="@+id/txtCategoria"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:ems="10">
        
        
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="40dp"
        android:text="Categoria:" />

    <Button
        android:id="@+id/btnAlterar"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDesc"
        android:onClick="btnAlterar_Click"
        android:layout_marginTop="27dp"
        android:text="Alterar" />

    <Button
        android:id="@+id/btnExcluir"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAlterar"
        android:layout_alignBottom="@+id/btnAlterar"
        android:layout_alignRight="@+id/txtDesc"
        android:onClick="btnExcluir_Click"
        android:text="Excluir" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/linearLayout1"
        android:text="Descrição da Categoria:" />

    <EditText
        android:id="@+id/txtDesc"
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_below="@+id/textView3"
        android:ems="10" />

</RelativeLayout>